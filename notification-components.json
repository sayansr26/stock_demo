    "animations": {
      "fadeInOut": {
        "keyframes": {
          "0%": {"opacity": 0, "transform": "scale(0.8)"},
          "100%": {"opacity": 1, "transform": "scale(1)"}
        },
        "duration": "300ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "slideUp": {
        "keyframes": {
          "0%": {"transform": "translateY(100%)"},
          "100%": {"transform": "translateY(0)"}
        },
        "duration": "250ms",
        "easing": "ease-out"
      },
      "bounce": {
        "keyframes": {
          "0%, 20%, 50%, 80%, 100%": {"transform": "translateY(0)"},
          "40%": {"transform": "translateY(-10px)"},
          "60%": {"transform": "translateY(-5px)"}
        },
        "duration": "600ms",
        "easing": "ease-in-out"
      }
    },
    "implementation": {
      "flutter": {
        "packages": [
          "flutter_local_notifications",
          "firebase_messaging",
          "overlay_support",
          "another_flushbar"
        ],
        "examples": {
          "snackbar": "ScaffoldMessenger.of(context).showSnackBar(SnackBar(content: Text('Stock added')))",
          "dialog": "showDialog(context: context, builder: (context) => AlertDialog(...))",
          "toast": "showOverlayNotification((context) => ToastWidget(...))"
        }
      },
      "permissions": {
        "android": [
          "android.permission.RECEIVE_BOOT_COMPLETED",
          "android.permission.VIBRATE",
          "android.permission.WAKE_LOCK"
        ],
        "ios": [
          "UserNotifications.framework"
        ]
      }
