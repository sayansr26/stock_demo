    },
    "elevation": {
      "level1": "0 2px 8px rgba(0, 0, 0, 0.3)",
      "level2": "0 4px 12px rgba(0, 0, 0, 0.25)",
      "level3": "0 8px 24px rgba(0, 0, 0, 0.2)",
